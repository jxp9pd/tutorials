{
	"manifest_version" : 2,
	"name" : "Count all the bears",
	"version" : "1",
	"content_scripts" : [
		{
			"matches" : [
				"<all_urls>"
                 ],
                  "js" : ["content.js"]
        }
    ],
    "browser_action": {
    	"default_title": "Bear"
    },
    "background": {
    	"scripts": ["background.js"]
    },
    "permissions": ["tabs"]
}
